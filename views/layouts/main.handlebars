<script>
$(function() {
    // User clicks button to create a burger
    $(".addBurger").on("click", (event) => {
        event.preventDefault();
        

        const newBurger = { burger_name: $("#bg").val().trim(), devoured: 0 }

        // console.log(newBurger);

        $.ajax("/api/burgers", {
                type: "POST",
                data: newBurger
            })
            .then(() => {
                console.log("Created new burger" + newBurger.burger_name);
                location.reload();
            })

    });
})





